# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
       
        position bottom
        tray_output primary

        colors {
                # colorclass            <border>        <background>    <text>
                background      $base02
                statusline      $yellow
                
                focused_workspace       $base02         $base02         $blue
                active_workspace        $base02         $base02         $orange
                inactive_workspace      $base02         $base03         $cyan
                urgent_workspace        $base02         $base03         $red
                binding_mode            $base02         $red            $red
        }
        
        # disable scrolling on workspace buttons
        bindsym button4 nop
        bindsym button5 nop
}

