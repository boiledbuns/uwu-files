# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod_deprecated+Shift+j move left
bindsym $mod_deprecated+Shift+l move right
bindsym $mod_deprecated+Shift+i move up
bindsym $mod_deprecated+Shift+k move down

# split in horizontal orientation
bindsym $mod_deprecated+h split h

# split in vertical orientation
bindsym $mod_deprecated+v split v

# enter fullscreen mode for the focused container
bindsym $mod_deprecated+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod_deprecated+s layout stacking
bindsym $mod_deprecated+w layout tabbed
bindsym $mod_deprecated+e layout toggle split

# toggle tiling / floating
bindsym $mod_deprecated+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod_deprecated+space focus mode_toggle

# focus the parent container
bindsym $mod_deprecated+a focus parent

# focus the child container
#bindsym $mod+d focus child

# reload the configuration file
bindsym $mod_deprecated+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod_deprecated+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod_deprecated+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod_deprecated+r mode "resize"

# workspace names
set $WS_TERMINAL number 1: terminal
set $WS_WEB number 2: web
set $WS_CODE number 3: code

# switch to workspace
bindsym $mod+1 workspace $WS_TERMINAL
bindsym $mod+2 workspace $WS_WEB
bindsym $mod+3 workspace $WS_CODE
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $WS_TERMINAL
bindsym $mod+Shift+2 move container to workspace $WS_WEB
bindsym $mod+Shift+3 move container to workspace $WS_CODE
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

exec i3-msg workspace $WS_WEB

# allow both options
bindsym $mod+Tab workspace back_and_forth

# screenshots
bindsym Print exec shutter --select # default is select region
bindsym Shift+Print exec shutter --full # use shift for entire screen

# Pulse Audio controls, increase, decrease, mute
bindsym XF86AudioRaiseVolume exec "pactl -- set-sink-volume 0 +5%; pactl -- set-sink-volume 1 +5%"
bindsym XF86AudioLowerVolume exec "pactl -- set-sink-volume 0 -5%; pactl -- set-sink-volume 1 -5%"
bindsym XF86AudioMute exec "pactl set-sink-mute 0 toggle; pactl set-sink-mute 1 toggle"

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness

# swap control and alt keys
exec_always "setxkbmap -option ctrl:swap_lalt_lctl"

set $LOCK_COMMAND "i3lock -d -i ~/Pictures/wallpapers/pepper.png"

# setting up compton, i3lock, pol agent, srandrd
exec            --no-startup-id         /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1
exec            --no-startup-id         xautolock -time 10 -locker '$LOCK_COMMAND'
exec_always     --no-startup-id         compton --config ~/.config/compton.conf -b
# exec            --no-startup-id         srandrd ~/scripts/reload_autorandr 

# wallpapers
# exec --no-startup-id feh --bg-scale ~/Pictures/wallpapers/rockydolomite.jpg
exec_always --no-startup-id feh --random --bg-fill ~/Pictures/wallpapers/*
exec_always     "autorandr -c"

bindsym $mod_deprecated+Shift+Left workspace prev
bindsym $mod_deprecated+Shift+Right workspace next

bindsym $mod_deprecated+l exec $LOCK_COMMAND

hide_edge_borders smart

